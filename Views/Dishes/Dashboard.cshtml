@{
    ViewData["Title"] = "Home Page";
}
@model List<Dish>

<div class="container text-center px-2">
    <h1 class="display-4">Welcome to CRUDelicious</h1>
    <h3>Home  |  <a href="/dishes/new">Add a Dish</a></h3>
    <div class="w-50">
        <p>Check out some recent dishes</p>
        <hr width="100%"/><br/>
        @foreach(Dish dish in Model){
            <p><a asp-action="One" asp-controller="Dishes" asp-route-DishId="@dish.DishId">@dish.DishName</a> by @dish.ChefName</p>
        }
    
    </div>
</div>
